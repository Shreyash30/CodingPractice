link: https://leetcode.com/problems/remove-outermost-parentheses/description/

/**
 * @param {string} s
 * @return {string}
 */
var removeOuterParentheses = function(s) {
    let string="";
    let nleft=0,nright=0,idx;
    for(let i=0;i<s.length;i++)
    {
        if(s[i]=='(')
        nleft++;
        else
        nright++;
        if(nleft-nright==0)
        idx=i+1;
        if(nleft-nright>=1 && i!=0 && i!=idx)
        string+=s[i];
    }
    return string;
};
