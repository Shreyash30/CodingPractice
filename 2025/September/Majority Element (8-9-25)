link: https://leetcode.com/problems/majority-element/description/

int majorityElement(int* nums, int numsSize) {
    int candidate=-1,votes=0,count=0;
    //to find the majority candidate
    for(int i=0;i<numsSize;i++)
    {
        if(votes==0)
        {
            candidate=nums[i];
            votes=1;
        }
        else
        {
            if(nums[i]==candidate)
            votes++;
            else
            votes--;
        }
    }
    //to make sure the candidate we chose is the majority element(more than n/2 times)
    /*for(int i=0;i<numsSize;i++)
    {
     if(nums[i]==candidate)
     count++;
    }*/
   // if(count > (numsSize/2))  not necessary here
    return candidate;
   // return -1;
}
