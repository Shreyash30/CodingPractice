link: https://leetcode.com/problems/smallest-index-with-digit-sum-equal-to-index/description/

int smallestIndex(int* nums, int numsSize) {
    for(int i=0;i<numsSize;i++)
    {   int sum=0;
        int num=nums[i];
        while(num>0)
        {
            int rem=num%10;
            sum+=rem;
            num/=10;
        }
        if(sum==i)
        return i;
    }
    return -1;
}
