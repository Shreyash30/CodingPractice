link: https://leetcode.com/problems/sort-characters-by-frequency/description/

class Solution {
public:
    string frequencySort(string s) {
        map<char,int>mpp;
        string sorted = "";
        for(int i=0;i<s.size();i++)
        {
            mpp[s[i]]++;
        }
        priority_queue<pair<int,char>>res;
        for(auto it:mpp)
        {
            res.push({it.second,it.first});
        }
        
        while(res.empty()==false)
        {
            auto ele=res.top();
            res.pop();
          sorted.append(ele.first, ele.second);
        }
      return sorted;
    }
};
