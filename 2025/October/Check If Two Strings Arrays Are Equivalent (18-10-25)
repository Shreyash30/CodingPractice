link: https://leetcode.com/problems/check-if-two-string-arrays-are-equivalent/description/

/**
 * @param {string[]} word1
 * @param {string[]} word2
 * @return {boolean}
 */
var arrayStringsAreEqual = function(word1, word2) {
    let str1="",str2="";
    for(let i of word1)
    str1+=i;
    for(let i of word2)
    str2+=i;
    if(str1===str2)
    return true;
    else
    return false;
};
