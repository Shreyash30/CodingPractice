link: https://leetcode.com/problems/equal-score-substrings/description/

/**
 * @param {string} s
 * @return {boolean}
 */
var scoreBalance = function(s) {
    let totalscore = 0;
    for (let i = 0; i < s.length; i++) {
        totalscore += s.charCodeAt(i)-96;
    }
   let leftscore = 0;
    for (let i = 0; i < s.length - 1; i++) {
        leftscore += s.charCodeAt(i)-96;
        let rightscore = totalscore - leftscore;
        if (leftscore === rightscore)
        return true;
    }
return false;
};
