link: https://leetcode.com/problems/combination-sum-ii/description/

class Solution {
public:
    void findCombination2(int ind, int target,vector<int>& arr, vector<vector<int>>& ans, vector<int>& temp){

        if(ind == arr.size() || target == 0)
        {
            if(target == 0)
            ans.push_back(temp);
            return;
        }

       for(int i = ind; i < arr.size(); i++){

        if(i > ind && arr[i-1] == arr[i] ) continue;
        if(arr[i] > target) break;

        temp.push_back(arr[i]);
        findCombination2(i+1, target - arr[i], arr, ans, temp);
        temp.pop_back();
       }
    }
    

    vector<vector<int>> combinationSum2(vector<int>& candidates, int target) {
        sort(candidates.begin(), candidates.end());
        vector<vector<int>> ans;
        vector<int> temp;
        findCombination2(0, target, candidates, ans,  temp);
        return ans;
    }
};
